<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	ch07</display-name>
	<servlet>
		<description>
		</description>
		<display-name>
		HelloServlet</display-name>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>
		com.javawide.book.blackbook1.ch07.servlets.HelloServlet</servlet-class>
		<init-param>
			<description>
			파라미터 예제</description>
			<param-name>HelloParam</param-name>
			<param-value>Magneto</param-value>
		</init-param>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		HelloLoginServlet</display-name>
		<servlet-name>HelloLoginServlet</servlet-name>
		<servlet-class>
		com.javawide.book.blackbook1.ch07.servlets.HelloLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/HelloServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HelloLoginServlet</servlet-name>
		<url-pattern>/HelloLoginServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.javawide.book.blackbook1.ch07.filters.HelloFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ChainFilter</filter-name>
		<filter-class>com.javawide.book.blackbook1.ch07.filters.ChainFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ChainFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<jsp-config>
		<taglib>
			<taglib-uri>hellotags</taglib-uri>
			<taglib-location>/WEB-INF/tld/hellotags.tld</taglib-location>
		</taglib></jsp-config>
</web-app>
